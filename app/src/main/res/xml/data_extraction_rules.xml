<?xml version="1.0" encoding="utf-8"?><!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Inclure la base de données des alarmes dans le backup cloud -->
        <include domain="database" path="alarm_database"/>
        <include domain="sharedpref" path="app_preferences"/>
        <!-- Exclure les fichiers temporaires et caches -->
        <exclude domain="cache"/>
    </cloud-backup>
    <device-transfer>
        <!-- Inclure les données lors du transfert d'appareil -->
        <include domain="database" path="alarm_database"/>
        <include domain="sharedpref" path="app_preferences"/>
    </device-transfer>
</data-extraction-rules>